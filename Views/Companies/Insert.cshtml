                    <!--begin::Card title-->
                    <div class="card-title">
                        <h2>Add New Company</h2>
                    </div>
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Form-->
                    <form class="form" id="add_form" action="">

                        <div class="row g-9 mb-7">
                            <!--begin::Col-->
