                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-md-4 fv-row">
                                <div class="form-check form-check-custom form-check-solid">
                                    <input class="form-check-input IsApproved" type="checkbox" value="true" id="IsApproved" name="IsApproved" />
                                    <label class="form-check-label fs-6 fw-bold" for="IsApproved">
                                        Is Approved
                                    </label>
                                </div>
                            </div>
                            <!--end::Col-->
                        </div>
                        <div class="row g-9 mb-7">
                            <!--begin::Col-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">Password</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input class="form-control form-control-solid Password" placeholder="Password" name="Password" />
                                <!--end::Input-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-md-6 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">Confirm Password</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input class="form-control form-control-solid ConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword" />
                                <!--end::Input-->
                            </div>
                            <!--end::Col-->
                        </div>
                        <!--begin::Modal footer-->
                        <div class="card-footer m-auto flex-center">
                            <!--begin::Button-->
                            <button type="reset" id="add_cancel" class="btn btn-white me-3">Discard</button>
                            <!--end::Button-->
                            <!--begin::Button-->
                            <button type="button" id="add_submit" class="btn btn-primary">
                                <span class="indicator-label">Submit</span>
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                            <!--end::Button-->
                        </div>
                        <!--end::Modal footer-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
            
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->



