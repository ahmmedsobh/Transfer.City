                                        {
                                            <option value="@item.Value">@item.Name</option>
                                        }
                                    </select>
                                    <!--end::Select-->
                                </div>
                                <!--end::Input group-->
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
