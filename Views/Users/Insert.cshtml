<!--begin::Post-->
<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container">

        <!--begin::Form-->
        <form class="form" id="add_form" action="">
            <div class="card">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <h3>User data</h3>
                    </div>
                </div>
                <!--end::Card header-->
                <div class="card-body pt-0">
                    <div class="row g-9 mb-7">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-6 fw-bold mb-2">Name</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-solid DisplayName" placeholder="Display Name" name="User.DisplayName" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->

                    </div>

                    <div class="row g-9 mb-7">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-6 fw-bold mb-2">UserName</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-solid UserName" placeholder="UserName" name="User.UserName" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-6 fw-bold mb-2">Email Address</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-solid EmailAddress" placeholder="Email Address" name="User.EmailAddress" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <div class="row g-9 mb-7">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <div class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input IsActive" type="checkbox" value="true" name="User.IsActive" id="IsActive" />
                                <label class="form-check-label fs-6 fw-bold" for="IsActive">
                                    Is Active
                                </label>
                            </div>
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <div class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input IsEnabled" type="checkbox" value="true" id="IsEnabled" name="User.IsEnabled" />
                                <label class="form-check-label fs-6 fw-bold" for="IsEnabled">
                                    Is Enabled
                                </label>
                            </div>
                        </div>
                        <!--end::Col-->

                    </div>
                    <div class="row g-9 mb-7">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-6 fw-bold mb-2">Password</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-solid Password" placeholder="Password" name="User.Password" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-6 fw-bold mb-2">Confirm Password</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input class="form-control form-control-solid ConfirmPassword" placeholder="Confirm Password" name="User.ConfirmPassword" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                    </div>
                </div>
            </div>

            <div class="card mt-10">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <h3>User Permissions</h3>
                    </div>
                </div>
                <!--end::Card header-->

                <div class="card-body pt-0">
                    <!--begin::Search-->
