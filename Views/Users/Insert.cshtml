                        <!--end::Svg Icon-->
                        <input type="text" id="PermissionsTableSearchInput" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search" />
                    </div>
                    <!--end::Search-->
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="PermissionsTable">
                        <!--begin::Table head-->
                        <thead>
                            <!--begin::Table row-->
                            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                                <th class="min-w-125px">Name</th>
                                <th class="min-w-125px">Rule</th>
                                <th class="text-end min-w-70px">Actions</th>
                            </tr>
                            <!--end::Table row-->
                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody class="fw-bold text-gray-600">
                        </tbody>
                        <!--end::Table body-->
                    </table>
                </div>
            </div>

            <div class="card mt-10">
                <div class="card-body">
                    <!--begin::Button-->
                    <button type="reset" id="add_cancel" class="btn btn-white me-3">Discard</button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="button" id="add_submit" class="btn btn-primary">
                        <span class="indicator-label">Submit</span>
                        <span class="indicator-progress">
                            Please wait...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <!--end::Button-->
                </div>
            </div>

        </form>
        <!--end::Form-->

    </div>
    <!--end::Container-->
</div>
<!--end::Post-->



@section Scripts
{

    <script>

        $(function () {
            FillPermissionsTable(0);
            $(document).on("click", "#add_submit", function () {
                Insert();
            });

            $(document).on("keyup", `#PermissionsTableSearchInput`, function () {
                $("#PermissionsTable").DataTable().search($(this).val()).draw();
            });
        });

        function Insert() {

            //if (!Validation('#add_modal')) {
            //    e.preventDefault();
            //    return;
            //}


            var FormData = $("#add_form").serialize();
            $.ajax({
                type: 'POST',
                url: `@Url.Action("Insert", "Users")`,
                processData: false,
                dataType: false,
                data: FormData,
                //beforeSend: function () {

                //},

            success: function (data) {

                if (data.Message.Title != null && data.Message.Title != "") {
                    var title = data.Message.Title;
                    var body = data.Message.Description;
                    var type = data.Message.Type;
                    ShowMessage(title, body, type);
                }

                if (data.Message.Type == 0) {
                    location.href = '/Users/Index';
                }


                },
                error: function (ex) {

                    var r = jQuery.parseJSON(response.responseText);
                    alert("Message: " + r.Message);
                    alert("StackTrace: " + r.StackTrace);
                    alert("ExceptionType: " + r.ExceptionType);
                }
            });

        }

        function FillPermissionsTable(UserId) {
            var Url = "@Url.Action("PermissionsList", "Users")";
            var Columns = [
                { data: 'PermissionName' },
                { data: 'RuleName' },
                {
                    data: null, render: function (data, type, row) {

                        var ApproveBtn = ``;
                        if (data.Enabled) {
                            ApproveBtn = `<div class="form-check form-check-sm form-check-custom form-check-solid">
                                            <input class="form-check-input ApprovePermissionBtn" name="UserPermissions[${data.RowNumber-1}].Enabled"  type="checkbox" checked='checked' value="true" />
                                            <input type="hidden" name="UserPermissions[${data.RowNumber - 1}].PermissionID" value="${data.PermissionID}"/>
                                        </div>`;
                        }
                        else {
                            ApproveBtn = `<div class="form-check form-check-sm form-check-custom form-check-solid">
                                            <input class="form-check-input ApprovePermissionBtn" name="UserPermissions[${data.RowNumber - 1}].Enabled" type="checkbox" value="true" />
                                            <input type="hidden" name="UserPermissions[${data.RowNumber-1}].PermissionID" value="${data.PermissionID}"/>
                                          </div>`;
                        }

                        return ApproveBtn;
                    }
                },
            ];

            var data = {
                UserId: UserId
            };

            rowGroup = 'RuleName';

            BuildAjaxDataTable($("#PermissionsTable"), Url, Columns, data, "", false, rowGroup);
        }

    </script>
}