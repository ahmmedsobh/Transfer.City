@model int
@{
    ViewBag.Title = "Complaints";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<style>
    .site-title {
        margin-top: 80px;
    }
</style>
<!-- Page info -->
<header class="site-title color">
    <div class="wrap">
        <div class="container">
            <h1>Contact us</h1>
            <nav role="navigation" class="breadcrumbs">
                <ul>
                    <li><a href="/Home" title="Home">Home</a></li>
                    <li>Complaints</li>
                </ul>
            </nav>
        </div>
    </div>
</header>
<!-- //Page info -->



<div class="wrap">
    <div class="row">

        <!--- Content -->
        <div class="full-width content textongrey">
            <h2>Send us a complaint</h2>
            <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit. All fields are required.</p>
        </div>
        <!--- //Content -->
        <!-- Form -->
        <div class="three-fourth">
            <form method="post" id="ComplaintsForm" action="@Url.Action("Complaints","Home")">
                <div id="message"></div>
                <input type="hidden" name="TripId" value="@Model" />
                <div class="f-row">
                    <div class="full-width">
                        <label for="Tilte">Title</label>
                        <input required type="text" id="Tilte" name="Title" />
                    </div>
                </div>
                <div class="f-row">
                    <div class="full-width">
                        <label for="Decription">Message</label>
                        <textarea required id="Decription" name="Decription"></textarea>
                    </div>
                </div>
                <div class="f-row">
                    <input type="submit" value="Submit" id="SubmitBtn" name="submit" class="btn color medium right" />
                </div>
            </form>
        </div>
        <!-- //Form -->
        <!--- Sidebar -->
        <aside class="one-fourth sidebar right">
            <!-- Widget -->
            <div class="widget">
                <h4>Need help booking?</h4>
                <div class="textwidget">
                    <p>Call our customer services team on the number below to speak to one of our advisors who will help you with all of your needs.</p>
                    <p class="contact-data"><span class="icon icon-themeenergy_call black"></span> +1 555 555 555</p>
                </div>
            </div>
            <!-- //Widget -->
            <!-- Widget -->
            <div class="widget">
                <h4>Advertisment</h4>
                <a href="#"><img src="images/uploads/advertisment.jpg" alt="" /></a>
            </div>
            <!-- //Widget -->
        </aside>
        <!--- //Sidebar -->
    </div>
</div>

@section Scripts{

    <script>

        $(function () {

        })



    </script>

}